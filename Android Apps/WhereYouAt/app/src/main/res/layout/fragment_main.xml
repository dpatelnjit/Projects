<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" tools:context=".MainActivityFragment">

    <Button android:text="Get Location" android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/getLocation" />

    <TextView android:text="Press Get Location to find out your current address"
        android:id="@+id/currLocation" android:layout_width="fill_parent"
        android:textAlignment="center"
        android:background="@color/switch_thumb_normal_material_dark"
        android:layout_height="wrap_content" />

    <Button android:text="SMS Location" android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/startIntent" />


</LinearLayout>
